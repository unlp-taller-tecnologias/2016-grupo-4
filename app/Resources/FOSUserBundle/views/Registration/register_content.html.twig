{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-folder-open-o" aria-hidden="true"></i> Nuevo Usuario</h3>
            
        </div>
    </div>
    <br>


    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form, {'attr': {'class': 'fos_user_registration_register', 'id': 'register-form'} }) }}
                <section class="panel">
                    <header class="panel-heading">
                        Registrar
                    </header>

                    <div class="panel-body">
                        <div class="form_errors_change_pwd">
                            {{ form_errors(form) }}
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('intention') }}">
                               
                        <div class="form-group col-lg-4">
                            {{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}
                            {{ form_widget(form.username, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                            <span class="form_error_field">{{ form_errors(form.username) }}</span>
                        </div>
                        <div class="form-group col-lg-4">
                             {{ 'form.password'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.plainPassword.first, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                             <span class="form_error_field">{{ form_errors(form.plainPassword.first) }}</span>
                        </div>   
                        <div class="form-group col-lg-4">
                            {{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.plainPassword.second, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                            <span class="form_error_field">{{ form_errors(form.plainPassword.second) }}</span>
                        </div>
                        <div class="form-group col-lg-4">
                            {{ 'Nombre'|trans({}, 'FOSUserBundle') }}
                            {{ form_widget(form.nombre, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                            <span class="form_error_field">{{ form_errors(form.nombre) }}</span>           
                        </div>
                        <div class="form-group col-lg-4">
                             {{ 'Apellido'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.apellido, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                             <span class="form_error_field">{{ form_errors(form.apellido) }}</span>
                        </div>  
                        <div class="form-group col-lg-4">
                            {{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}
                            {{ form_widget(form.email, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                            <span class="form_error_field">{{ form_errors(form.email) }}</span>           
                        </div>
                        <div class="form-group col-lg-4">
                             {{ 'Rol'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.rol, { 'attr' :{ 'class' : 'form-control'}}) }}
                             <span class="form_error_field">{{ form_errors(form.rol) }}</span>
                        </div>  
                        <div class="form-group col-lg-4">
                             {{ 'Unidad de carga'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.unidades, { 'attr' :{ 'class' : 'form-control'}}) }}
                             <span class="form_error_field">{{ form_errors(form.unidades) }}</span>
                        </div> 
                    </div>
                </section>

                <div class="form-group col-lg-3">
                    <input class="btn btn-success btn-lg btn-block" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
                   
 
            {{ form_rest(form) }}
        </div>      
    </div>


{% endblock %}