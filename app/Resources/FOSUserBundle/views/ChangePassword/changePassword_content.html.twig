{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-folder-open-o" aria-hidden="true"></i> Cambiar Contrase&ntilde;a</h3>
            <a class="btn btn-primary" href="{{ path('paciente_index') }}" title="Volver"><i class="fa fa fa-reply-all" aria-hidden="true"></i>  Volver</a> 
        </div>
    </div>
    <br>

    <div class="row">
		<div class="col-lg-12">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                <section class="panel">
                    <header class="panel-heading">
                        Configuraci&oacute;n
                    </header>

                    <div class="panel-body">
                        <div class="form_errors_change_pwd">
                            {{ form_errors(form) }}
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('intention') }}">
                               
                        <div class="form-group col-lg-4">
                            {{ 'form.current_password'|trans({}, 'FOSUserBundle') }}
                           {{ form_widget(form.current_password, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                         <span class="form_error_field">{{ form_errors(form.current_password) }}</span>
                       </div>
                        <div class="form-group col-lg-4">
                             {{ 'form.new_password'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.plainPassword.first, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                            <span class="form_error_field">{{ form_errors(form.plainPassword.first) }}</span>           
                        </div>
                        <div class="form-group col-lg-4">
                            {{ 'form.new_password_confirmation'|trans({}, 'FOSUserBundle') }}
                             {{ form_widget(form.plainPassword.second, { 'attr' :{ 'class' : 'form-control round-input'}}) }}
                             <span class="form_error_field">{{ form_errors(form.plainPassword.second) }}</span>
                        </div>   
                    </div>
                </section>

                <div class="form-group col-lg-3">
                    <input class="btn btn-success btn-lg btn-block" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
                   
 
            {{ form_end(form) }}
            
        </div>      
    </div>

           
{% endblock %}