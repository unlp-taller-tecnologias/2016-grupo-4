{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="main container">
        <div class="row well" >
            <div class="col-md-10">
                <div class="page-header">
                   <h3 class="page-header"><i class="icon_house_alt" aria-hidden="true"></i>Perfil</h3>
                </div>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nombre de Usuario:</th>
                            <td> {{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Nombre:</th>
                            <td>{{ app.user.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Apellido:</th>
                            <td> {{ app.user.apellido }}</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td> {{ app.user.email }}</td>
                        </tr>
                        <tr>
                            <th>Rol:</th>
                                       
                            	{%  if app.user.getRol()   == 'ROLE_DATAENTRY' %}
                                	<td> DATAENTRY </td>
                                
                            	{% elseif app.user.getRol()   == 'ROLE_COORDINADOR' %} 

                                	<td> COORDINADOR </td>
                                {% else	 %} 
                                    <td> ADMINISTRADOR </td>
                            	{% endif %}
                        
                            
                        </tr>
                        {%  if (app.user.getRol() == 'ROLE_DATAENTRY') or (app.user.getRol() == 'ROLE_COORDINADOR') %}
                        <tr>
                        <th>Unidad de carga:</th>
                             <td> {{ app.user.getUnidades() }}</td>
                        </tr>
                        {% endif %}
                        
                    </tbody>
                </table>
                  {%  if (app.user.getRol() == 'ROLE_ADMIN') or (app.user.getRol() == 'ROLE_COORDINADOR') %}
                <ul>
                    <li>
                        
                        <a class="btn btn-info" href="{{ path('user_index') }}">Listado de Usuarios</a>
                         
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
     

{% endblock %}