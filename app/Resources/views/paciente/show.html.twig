{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Paciente</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paciente.id }}</td>
            </tr>
			<tr>
                <th>Nombre</th>
                <td>{{ paciente.nombre }}</td>
            </tr>
			<tr>
                <th>Apellido</th>
                <td>{{ paciente.apellido }}</td>
            </tr>
			<tr>
                <th>Tipo de documento</th>
                <td>{{ paciente.tipoDocumento }}</td>
            </tr>
            <tr>
                <th>Numerodocumento</th>
                <td>{{ paciente.numeroDocumento }}</td>
            </tr>
            <tr>
                <th>Fechanacimiento</th>
                <td>
				{% if paciente.fechaNacimiento %}
					{{ paciente.fechaNacimiento|date('d-m-y') }}
				{% endif %}
				</td>
            </tr>
			<tr>
                <th>Nacionalidad</th>
                <td>{% if paciente.nacionalidad %}{{ paciente.nacionalidad }}{% endif %}</td>
            </tr>
            
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-success" href="{{ path('paciente_index') }}">Back to the list</a>
			<a class="btn btn-success" href="{{ path('paciente_edit', { 'id': paciente.id }) }}">Edit</a>
			{{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
