{% extends 'layout.html.twig' %}

{% block body %}
         
            <!--overview start-->
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-female" aria-hidden="true"></i> Lista de pacientes</h3>
                    <a class="btn btn-info" href="{{ path('paciente_new') }}" title="Nuevo paciente"><i class="fa fa-plus-square" aria-hidden="true"></i>  Nuevo paciente</a>
                </div>
            </div>
              <br>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                      
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Numero Documento</th>
                                            <th>Apellido</th>
                                            <th>Nombre</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for paciente in pacientes %}
                                            <tr class="odd gradeX">
                                                <td>{{ paciente.numeroDocumento }}</td>
                                                <td>{{ paciente.apellido }}</td>
                                                <td>{{ paciente.nombre }}</td>
                                                
                                                <td>
                                                    <ul>
                                                        <li>
                                                            <a class="btn btn-info" href="{{ path('paciente_show', { 'id': paciente.id }) }}" title="Ver paciente">  Ver</a>
                                                            <a class="btn btn-success" href="{{ path('paciente_edit', { 'id': paciente.id }) }}" title="Editar paciente">  Editar</a>
															<a class="btn btn-success" href="{{ path('ficha_add', { 'id': paciente.id }) }}" title="Agregar Ficha">  Agregar</a>
															<a class="btn btn-success" href="{{ path('ficha_buscar', { 'id': paciente.id }) }}" title="Buscar Ficha">  Buscar</a>
                                                            <!-- <a class="btn btn-danger" href="{{ path('paciente_delete', { 'id': paciente.id }) }}" title="Eliminar paciente">  Eliminar</a> -->
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        
                                    
                                        
                                    </tbody>
                                </table>

                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                
            </div><!--/.row-->

       
{% endblock %}
