{% extends 'layout.html.twig' %}

{% block body %}
     
      <!--overview start-->
      <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-folder-open-o" aria-hidden="true"></i> Fichas</h3>
             
             <a class="btn btn-primary" href="{{ path('paciente_index') }}" title="Volver"><i class="fa fa fa-reply-all" aria-hidden="true"></i>  Volver</a>    

        </div>
    </div>
    <br>
    <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                      
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Nro Ficha</th>
                                            <th>Fecha de creaci√≥n</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for ficha in fichas %}
                                            <tr class="odd gradeX">
                                                <td>{{ ficha.id }}</td>
                                                <td>{{ ficha.fechaRegistro|date("d/m/Y") }}</td>
                                                
                                                <td>
                                                    <ul>
                                                        <li>
                                                            <a class="btn btn-info" href="{{ path('ficha_show', { 'id': ficha.id }) }}" title="Ver paciente">  Ver</a>
                                                             <a class="btn btn-success" href="{{ path('ficha_edit', { 'id': ficha.id }) }}" title="Editar ficha">  Editar</a>

                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        
                                    
                                        
                                    </tbody>
                                </table>

                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                
            </div><!--/.row-->
    

{% endblock %}
