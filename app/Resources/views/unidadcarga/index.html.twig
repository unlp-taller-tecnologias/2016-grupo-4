{% extends 'layout.html.twig' %}
{% block body %}
	<!--overview start-->
	  <div class="row">
		<div class="col-lg-12">
			<h3 class="page-header"><i class="icon_house_alt" aria-hidden="true"></i> Lista de Unidades de Carga</h3>
			<a class="btn btn-info" href="{{ path('unidadcarga_new') }}" title="Nueva unidad de carga"><i class="fa fa-plus-square" aria-hidden="true"></i>  Nueva unidad de carga</a>		
			{% if error_borrar != "" %}
				<div class="alert alert-block alert-danger fade in">
					<button data-dismiss="alert" class="close close-sm" type="button">
						<i class="icon-remove"></i>
					</button>{{error_borrar}}
				</div>
			{% endif %}
		</div>		
	</div>
	<br>
			<div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                      
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
							{% if unidadCargas %}
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
								<thead>
									<tr>
										<th>Nombre</th>
										<th>Localidad</th>										
										<th>Acciones</th>
									</tr>
								</thead>
								<tbody>
									{% for unidadCarga in unidadCargas %}
										{% if unidadCarga.getactivo == 1 %}
									<tr class="odd gradeX">
										<td>{{ unidadCarga.nombre }}</td>
										<td>{{ unidadCarga.localidad }}</td>										
										<td>
											<ul>
												<li>
												   <a class="btn btn-info" href="{{ path('unidadcarga_show', { 'id': unidadCarga.id }) }}" title="Ver unidad de carga">  Ver</a>
												   <a class="btn btn-success" href="{{ path('unidadcarga_edit', { 'id': unidadCarga.id }) }}" title="Editar unidad de carga">  Editar</a>
												   <a class="btn btn-danger" href="{{ path('unidadcarga_delete', { 'id': unidadCarga.id }) }}" title="Eliminar unidad de carga">  Eliminar</a>
												</li>
											</ul>
										</td>  
									</tr>
									{% endif %}
									{% else %}
									<li><em>no hay usuarios</em></li>
									{% endfor %}
							</tbody>
						</table>
						{% else %}
							<div class="alert alert-block alert-danger fade in">
								<button data-dismiss="alert" class="close close-sm" type="button">
									<i class="icon-remove"></i>
								</button>Las unidades de carga que se carguen se visulizaran en esta lista.
							</div>
						{% endif %}
                        </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                
            </div><!--/.row-->

            
{% endblock %}
