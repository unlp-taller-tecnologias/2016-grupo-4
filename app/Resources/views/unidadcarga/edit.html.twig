{% extends 'layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="icon_house_alt" aria-hidden="true"></i> Editar unidad de carga </h3>
            <a class="btn btn-primary" href="{{ path('unidadcarga_index') }}" title="Volver"><i class="fa fa fa-reply-all" aria-hidden="true"></i>  Volver</a> 
        </div>
    </div>
    <br>
    <div class="main container">
		<div class="row well" >
			<div class="col-md-12">
   			{{ form_start(edit_form, { 'attr' : {'role' : 'form'}}) }}
			<div class="form-group col-lg-6">
				{{ form_label(edit_form.nombre) }}
				{{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
				<span class="text-danger">{{ form_errors(edit_form.nombre) }}</span>
			</div>

			<div class="form-group col-lg-6">
					{{ form_label(edit_form.localidad) }}
					{{ form_widget(edit_form.localidad, {'attr': {'class': 'form-control'}}) }}
					<span class="text-danger">{{ form_errors(edit_form.localidad) }}</span>
			</div>
						
	
				{{ form_widget(edit_form) }}
					<input type="submit" class="btn btn-success btn-lg btn-block" value="Editar unidad de carga" />			
				{{ form_end(edit_form) }}
					


				</section>	
		</div>
	</div>
{% endblock %}